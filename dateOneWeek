 <script type="text/javascript">
        $(function () {
            $('#datetimepicker12').datetimepicker({
                inline: true,
                format: 'LD',
                sideBySide: true,
		minDate: new Date(),
		maxDate: '+1w-1'
            });
        });
       
    </script>
